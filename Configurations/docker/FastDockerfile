# FastAPIDockerfile (Configurations/docker/FastAPIDockerfile)

FROM python:3.11-slim
WORKDIR /app

RUN apt-get update && apt-get install -y \
    openssh-server \
    netcat-openbsd \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

COPY APP_FAST/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY ../../ .
CMD ["sh", "-c", "while ! nc -z db 5432; do sleep 1; done && uvicorn app.main:app --host 0.0.0.0 --port 8001 --workers 1"]
